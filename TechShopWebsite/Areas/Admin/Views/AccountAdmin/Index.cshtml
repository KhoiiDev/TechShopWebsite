@model List<TechShopWebsite.Models.ApplicationUser>

@{
    ViewBag.Title = "Quản lý tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div id="page-inner">
    <div class="row">
        <div class="col-md-12">
            <h2>@ViewBag.Title</h2>
        </div>
    </div>
    <!-- /. ROW  -->
    <hr />

    <div class="row">
        <div class="col-md-12">
            <!-- Advanced Tables -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    @ViewBag.Title
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                            <table class="table table-striped table-bordered table-hover dataTable no-footer"
                                   id="dataTables-example" aria-describedby="dataTables-example_info">
                                <thead>
                                    <tr role="row">
                                        <th>STT</th>
                                        <th>UserName</th>
                                        <th>Email</th>
                                        <th>Role</th>
                                        <th>Change Role</th>
                                        <th>Feature</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        var stt = 1;
                                        foreach (var item in Model)
                                        {
                                            // Lấy danh sách RoleName và đưa vào chuỗi


                                            <tr id="trow_@item.Id">
                                                <td>@stt</td>
                                                <td>@item.UserName</td>
                                                <td>@item.Email</td>
                                                <td>
                                                    @if (item.Roles != null && item.Roles.Any())
                                                    {
                                                        foreach (var role in item.Roles)
                                                        {
                                                            @Html.Action("showRoleName", "AccountAdmin", new { roleID = role.RoleId })
                                                        }

                                                    }
                                                </td>
                                                <td>
                                                    @Html.Action("showRoles", "AccountAdmin", new { userID = item.Id })
                                                </td>
                                                <td>
                                                    <a href="" data-id="@item.Id"
                                                       class="icon-box bg-danger set-icon btn btn-default btDelete">
                                                        <i class="fa fa-trash-o fa-1x"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                            stt++;
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
            <!--End Advanced Tables -->
        </div>
    </div>
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            $('body').on('click', '.btDelete', function () {
                var id = $(this).data('id');
                var conf = confirm('Are you sure delete');
                if (conf === true) {
                    $.ajax({
                        url: '/admin/AccountAdmin/DeleteAccount',
                        type: 'Post',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success) {
                                $('#trow_' + id).remove();
                                location.reload();
                            }
                        }
                    });
                }
            });

            $('body').on('click', '.btDelete', function () {
                var id = $(this).data('id');
                var conf = confirm('Are you sure delete');
                if (conf === true) {
                    $.ajax({
                        url: '/admin/NewsAdmin/DeleteNews',
                        type: 'Post',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success) {
                                $('#trow_' + id).remove();
                                location.reload();
                            }
                        }
                    });
                }
            });
            $('.slRole').change(function () {
                var selectedOption = $(this).val();
                var id = $(this).data('id');
                $.ajax({
                    type: 'POST',
                    url: '/Admin/AccountAdmin/SetUserRole',
                    data: { userId: id, role: selectedOption },
                    success: function (response) {
                        if (response.success) {
                            location.reload();
                        }
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        alert("error");
                    }
                });
            });
        });
    </script>

    <script src="~/Content/assetsAdmin/js/dataTables/jquery.dataTables.js"></script>
    <script src="~/Content/assetsAdmin/js/dataTables/dataTables.bootstrap.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });
    </script>

    <script>
        $('#accounts').addClass('active-menu');
    </script>
}

