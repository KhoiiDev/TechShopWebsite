@model List<TechShopWebsite.Models.EF.Contact>
@using System.Text;
@{
    ViewBag.Title = "Quản lý liên hệ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}

<div id="page-inner">
    <div class="row">
        <div class="col-md-12">
            <h2>@ViewBag.Title</h2>
        </div>
    </div>
    <!-- /. ROW  -->
    <hr />

    <div class="row">
        <div class="col-md-12">
            <!-- Advanced Tables -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    @ViewBag.Title
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                            <table class="table table-striped table-bordered table-hover dataTable no-footer"
                                   id="dataTables-example" aria-describedby="dataTables-example_info">
                                <thead>
                                    <tr role="row">
                                        <th>STT</th>
                                        <th>Username</th>
                                        <th>Email</th>
                                        <th>Subject</th>
                                        <th>Message</th>
                                        <th>Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        var stt = 1;

                                        foreach (var item in Model)
                                        {
                                            <tr id="trow_@item.Id">

                                                <td>@stt</td>
                                                <td>@item.username </td>
                                                <td>@item.contactEmail</td>
                                                <td>@item.contactSubject</td>
                                                <td>@item.contactMessage</td>
                                                <td>@item.datebegin</td>
                                            </tr>
                                            stt++;
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
            <!--End Advanced Tables -->
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Content/assetsAdmin/js/dataTables/jquery.dataTables.js"></script>
    <script src="~/Content/assetsAdmin/js/dataTables/dataTables.bootstrap.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });
    </script>

    <script>
        $('#contact').addClass('active-menu');
    </script>
}


