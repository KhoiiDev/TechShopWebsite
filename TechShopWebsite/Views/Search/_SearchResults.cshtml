@model IEnumerable<TechShopWebsite.Models.EF.Product>

@if (Model != null && Model.Any())
{
    foreach (var item in Model)
    {
        <div class="card p-3 m-3" style="max-width: 540px; max-height: 120px;">
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="@item.img.Split(';')[0]" class="img-fluid rounded-start">
                </div>
                <div class="col-md-8">
                    <div class="card-body p-0">
                        <a class="card-link" href="@Url.RouteUrl("DetailProduct", new { @meta = item.meta })"> <b class="card-title">@item.productName</b></a>
                        @{
                            decimal price = item.price - (item.price * item.sale);
                            string formattedPrice = price.ToString("N3").Replace(",", ".") + " VND";
                        }
                        <p><small class="card-text">@(formattedPrice)</small> <small class=" card-text text-muted ml-2"><del>@(item.price.ToString("N3").Replace(",", ".") + " VND")</del></small> </p>
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <h2>Không tìm thấy kết quả</h2>
}

