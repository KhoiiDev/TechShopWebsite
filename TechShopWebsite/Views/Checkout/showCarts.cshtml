@model List<TechShopWebsite.Models.EF.Cart>
@using Microsoft.AspNet.Identity


<h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Your Order</span></h5>
<div class="bg-light p-30 mb-5">
    @if (Model != null && Model.Any())
    {
        decimal total = 0;

        <div>
            <table class="table table-borderless text-center">
                <thead>
                    <tr>
                        <th></th>
                        <th>Tên sản phẩm</th>
                        <th>Số lượng</th>
                        <th>Giá tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        total = total + item.cost * item.quantity;

                        <tr>
                            <td>
                                <img class="img-fluid" src="@item.product.img.Split(';')[0]" width="80">
                            </td>
                            <td>
                                @item.product.productName
                            </td>
                            <td>x @item.quantity</td>
                            <td>@((item.cost * item.quantity).ToString("N3").Replace(",", ".") + " VND")</td>
                        </tr>

                    }
                </tbody>
            </table>
            
        </div>
        <hr />
        <div class="pt-2">
            <div class="d-flex justify-content-between mt-2">
                <h4 class="font-weight-medium">Shipping</h4>
                <h4 class="font-weight-medium">@((total * (decimal)0.05).ToString("N3").Replace(",", ".") + " VND")</h4>
            </div>
            <div class="d-flex justify-content-between mt-2">
                <h3>Tổng cộng</h3>
                <h3>@((total+ (total * (decimal)0.05) ).ToString("N3").Replace(",", ".") + " VND")</h3>
            </div>
        </div>
    }
</div>
