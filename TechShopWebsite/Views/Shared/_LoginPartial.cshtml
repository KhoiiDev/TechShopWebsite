@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
<div class="p-3 d-inline-flex">
        @*<img src="/ckfinder/userfiles/images/customers/find_user.png" height="30" />*@
        <br>

        @Html.ActionLink( User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "nav-link" })
        <a class="nav-link btn btn-dark text-white rounded-pill d-flex justify-content-center align-items-center py-2 mr-2" href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
        @if (User.IsInRole("Admin"))
        {
            <a class="nav-link btn btn-info text-white rounded-pill d-flex justify-content-center align-items-center py-2 mr-2" href="@Url.RouteUrl("AdminProducts")">Admin</a>
        }
</div>
    }
}
else
{
    <a id="loginLink" class="btn btn-success text-white rounded-pill d-flex justify-content-center align-items-center py-2 mr-2" href="@Url.RouteUrl("Login", routeValues: null)">Login</a>
    <a id="registerLink" class="btn btn-warning text-white rounded-pill d-flex justify-content-center align-items-center py-2 mr-4" href="@Url.RouteUrl("Register", routeValues: null)">Register</a>

}