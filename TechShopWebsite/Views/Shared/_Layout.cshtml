<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- Favicon -->
    <link href="/ckfinder/userfiles/files/public/Logo.png" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">


    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/Content/assetHome/lib/animate/animate.min.css" rel="stylesheet" />
    <link href="~/Content/assetHome/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" />
    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/Content/assetHome/css/style.css" rel="stylesheet" />

    <link href="~/Content/assetHome/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" />

    <link href="~/Content/assetHome/lib/animate/animate.min.css" rel="stylesheet" />

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>


    @RenderSection("header", required: false)

</head>
<body>
    @Html.Partial("_PartialSideBarHome");

    <div class="body-content">
        @RenderBody()
    </div>


    <!-- Back to Top -->
    <a href="#" class="btn btn-primary back-to-top"><i class="fa fa-angle-double-up"></i></a>

    <hr />

    <!-- Footer START -->
    <footer>
        @Html.Partial("_Footer");
    </footer>
    <!-- Footer End -->
    <!-- CUSTOM SCRIPTS -->
    <script src="~/Content/ckeditor/ckeditor/ckeditor.js"></script>
    <script src="~/Content/ckfinder/ckfinder/ckfinder.js"></script>
    <script src="https://cdn.ckeditor.com/ckeditor5/36.0.1/classic/ckeditor.js"></script>

    <!-- JavaScript Libraries -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>

    <script src="~/Content/assetHome/lib/easing/easing.min.js"></script>

    <!-- Contact Javascript File -->
    <script src="~/Content/assetHome/mail/jqBootstrapValidation.min.js"></script>
    @*<script src="~/Content/assetHome/mail/contact.js"></script>*@
    <script src="~/Content/assetHome/lib/easing/easing.js"></script>
    <!-- Template Javascript -->
    <script src="~/Content/assetHome/js/main.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
        $(function () {
            $('input[name="query"]').keyup(function () {
                var query = $(this).val();
                if (query.length >= 3) {
                    $.ajax({
                        url: '/Search/SearchProduct',
                        type: 'GET',
                        data: { query: query },
                        success: function (data) {
                            $('#search-results').html(data);
                        }
                    });
                } else {
                    $('#search-results').empty();
                }
            });
        });
    </script>
</body>
</html>
