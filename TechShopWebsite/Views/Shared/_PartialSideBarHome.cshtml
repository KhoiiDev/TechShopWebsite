@using Microsoft.AspNet.Identity
@using System.Text;

<div class="container-fluid">
    <div class="row bg-secondary py-1 px-xl-5">
        <div class="col-lg text-center text-lg-right">
            <div class="d-inline-flex align-items-center">
                <div class="btn-group">
                    <button type="button" class="btn btn-sm btn-light dropdown-toggle" data-toggle="dropdown">
                        <img src="~/Content/assetHome/img/Flag_of_England.png" height="13"> EN
                    </button>
                    <div class="dropdown-menu dropdown-menu-right">
                        <button class="dropdown-item" type="button">
                            <img src="~/Content/assetHome/img/Flag_of_US.png" height="13">US
                        </button>
                        <button class="dropdown-item" type="button">
                            <img src="~/Content/assetHome/img/Flag_of_Vietnam.png" height="13"> VN
                        </button>
                    </div>
                </div>
            </div>
            <div class="d-inline-flex align-items-center d-block d-lg-none">
                @if (Request.IsAuthenticated)
                {
                    <a class="px-0 ml-2 fas fa-shopping-cart text-dark" href="@Url.RouteUrl("Cart")"></a>
                }
                else
                {
                    <a class="px-0 ml-2 fas fa-shopping-cart text-dark" href="@Url.RouteUrl("Login")">Login to add to cart</a>
                }
            </div>
        </div>
    </div>
    <div class="row align-items-center bg-light py-3 px-xl-5 d-none d-lg-flex">
        <div class="col-lg-4">
            <a href="@Url.RouteUrl("Home")" class="text-decoration-none">
                <span class="h1 text-uppercase text-primary bg-dark px-2">TECHCOM</span>
                <span class="h1 text-uppercase text-dark bg-primary px-2 ml-n1">SHOP</span>
            </a>
        </div>
        <div class="col-lg-4 col-6 text-left">
            @using (Html.BeginForm("SearchProduct", "Search", FormMethod.Get))
            {
                <div class="input-group">
                    <input type="text" name="query" class="form-control" placeholder="Search for products">
                    <div class="input-group-append">
                        <button type="submit" class="input-group-text bg-transparent text-primary">
                            <i class="fa fa-search"></i>
                        </button>
                    </div>
                </div>
                <div id="search-results" class="position-absolute bg-light rounded shadow">

                </div>
                <style>
                    #search-results {
                        z-index: 1000; /* Đặt z-index lớn hơn các phần tử khác để đè lên chúng */
                        top: 50px; /* Đặt vị trí của khối div */
                        left: 0;
                        right: 0;
                    }
                </style>
            }
        </div>

        <div class="col-lg-4 col-6 d-flex flex-row-reverse">
            <div class="p-3 d-inline-flex">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
</div>
<!-- Topbar End -->
<!-- Navbar Start -->
<div class="container-fluid bg-dark mb-30">
    <div class="row px-xl-5">
        <!-- Category -->
        <div class="col-lg-3 d-none d-lg-block">
            <a class="btn d-flex align-items-center justify-content-between bg-primary w-100" data-toggle="collapse"
               href="#navbar-vertical" style="height: 65px; padding: 0 30px;">
                <h6 class="text-dark m-0"><i class="fa fa-bars mr-2"></i>Categories</h6>
                <i class="fa fa-angle-down text-dark"></i>
            </a>
            <nav class="collapse position-absolute navbar navbar-vertical navbar-light align-items-start p-0 bg-light"
                 id="navbar-vertical" style="width: calc(100% - 30px); z-index: 999;">
                <div class="navbar-nav w-100">
                    <div class="nav-item">

                        <a class="nav-link" href="@Url.RouteUrl("CategoryType", new { @type = "phone", @page = 1 })">Điện Thoại</a>
                        <a class="nav-link" href="@Url.RouteUrl("CategoryType", new { @type = "laptop", @page = 1 })">Lap top</a>
                        <a class="nav-link" href="@Url.RouteUrl("CategoryType", new { @type = "tablet", @page = 1 })">Máy tính bảng</a>
                        @*<a class = "nav-link" href="@Url.RouteUrl("CategoryType", new { @type = "PC", @page = 1 })">PC</a>*@
                        <a class="nav-link" href="@Url.RouteUrl("CategoryType", new { @type = "smartwatch", @page = 1 })">Smartwatch</a>

                    </div>
                </div>
            </nav>
        </div>
        <!-- Category -->
        <!-- Menu -->
        <div class="col-lg-9">
            <nav class="navbar navbar-expand-lg bg-dark navbar-dark py-3 py-lg-0 px-0">
                <a href="" class="text-decoration-none d-block d-lg-none">
                    <span class="h1 text-uppercase text-dark bg-light px-2">TECHCOM</span>
                    <span class="h1 text-uppercase text-light bg-primary px-2 ml-n1">Shop</span>
                </a>
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                    <div class="navbar-nav mr-auto py-0">
                        <a id="ActionLinkHome" class="nav-item nav-link" href="@Url.RouteUrl("Home")">Home</a>
                        <a id="ActionLinkShop" class="nav-item nav-link" href="@Url.RouteUrl("Category")">Shop</a>
                        <a id="ActionLinkCheckout" class="nav-item nav-link" href="@Url.RouteUrl("Checkout")">Checkout</a>
                        <a id="ActionLinkContact" class="nav-item nav-link" href="@Url.RouteUrl("Contact")">Contact</a>

                    </div>
                    <div class="navbar-nav ml-auto py-0 d-none d-lg-block">
                        @if (Request.IsAuthenticated)
                        {
                            <a class="px-0 ml-2 fas fa-shopping-cart text-light" href="@Url.RouteUrl("Cart")"></a>
                            @*<span class="badge text-light border border-light rounded-circle" style="padding-bottom: 2px;">0</span>*@
                        }
                        else
                        {
                            <a class="px-0 ml-2 fas fa-shopping-cart text-light" href="@Url.RouteUrl("Login")">Login to add to cart</a>
                        }
                    </div>
                </div>
            </nav>
        </div>
        <!-- Menu -->
    </div>
</div>
<!-- Navbar End -->
