@model IEnumerable<TechShopWebsite.Models.EF.Category>

<div class="container-fluid pt-5">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4">
        <span class="bg-secondary pr-3">Categories</span>
    </h2>
    <div class="row px-xl-5 pb-3">
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {

                <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
                    <a class="text-decoration-none" href="@Url.RouteUrl("CategoryType", new { @type = item.CategoryName , @page = 1 })">
                        <div class="cat-item img-zoom d-flex align-items-center mb-4">
                            <div class="overflow-hidden pt-3" style="width: 100px; height: 100px;">
                                <img class="img-fluid" src="@item.CategoryImage">
                            </div>
                            <div class="flex-fill pl-3">
                                <h3>@item.CategoryName</h3>
                                @*<small class="text-body">100 Products</small>*@
                            </div>
                        </div>
                    </a>
                </div>

            }
        }
    </div>
</div>

