@model IEnumerable<TechShopWebsite.Models.EF.News>
<div class="container-fluid pt-5 pb-3">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4">
        <span class="bg-secondary pr-3">
            News
        </span>
    </h2>
    <div class="row px-xl-5">
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
                    <div class="product-item bg-light mb-4">
                        <div class="product-img position-relative overflow-hidden" style="height: 200px;">
                            <img class="img-fluid w-100" src="@item.avatar">
                            <div class="product-action">
                                <a class="btn btn-outline-dark btn-square" href="@Url.RouteUrl("News", new { @meta = item.meta })"><i class="fa fa-search"></i></a>
                            </div>
                        </div>
                        <div class="text-center py-4">
                            <b class="fa-x"> @item.title</b>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
